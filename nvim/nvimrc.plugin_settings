"-------------------------------------------------------------------------------
" プラグインごとの設定 Plugin Settings
"-------------------------------------------------------------------------------

"-------------------------------------------------------------------------------
" scrooloose/nerdcommenter
"-------------------------------------------------------------------------------
" コメントの間にスペースを空ける
let NERDSpaceDelims = 1

" 未対応ファイルタイプのエラーメッセージを表示しない
let NERDShutUp=1


"-------------------------------------------------------------------------------
" nathanaelkane/vim-indent-guides
"-------------------------------------------------------------------------------
" 起動時に有効化
let g:indent_guides_enable_on_vim_startup = 1

"-------------------------------------------------------------------------------
" sjl/gundo.vim
"-------------------------------------------------------------------------------
" 履歴をツリー表示
nmap U :<C-u>GundoToggle<CR>
